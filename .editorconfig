root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 79
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

[*.md]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[{go.mod,go.sum,*.go}]
indent_style = tab
